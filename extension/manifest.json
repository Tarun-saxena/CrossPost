{
  "manifest_version": 3,
  "name": "Crosspost",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"]
    }
  ],
  "action": {
    "default_popup": "popup/index.html"
  }
}
